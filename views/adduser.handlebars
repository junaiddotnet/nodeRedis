

<h1>Add Users</h1>
{{#if error }} <span> {{error}} </span> {{/if}}
<form class="form-control" method="POST" action="/users/add">
<div class="form-group">
    <label>ID:</label>
    <input type="text" name="id" class="form-control" placeholder="put id inn">
</div>

<div class="form-group">
    <label>Name:</label>
    <input type="text" name="firstname" class="form-control" placeholder="put id inn">
</div>
<div class="form-group">
    <label>Last Name:</label>
    <input type="text" name="lastname" class="form-control" placeholder="put id name">
</div>
<div class="form-group">
    <label>Email:</label>
    <input type="text" name="email" class="form-control" placeholder="put id email">
</div>
<div class="form-group">
    <label>Phone:</label>
    <input type="text" name="phone" class="form-control" placeholder="put id phone">
</div>

<input type="submit" class="form-control" value="Save">
</form>